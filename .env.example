# YouTube Data API v3 credentials
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_client_id
YOUTUBE_CLIENT_SECRET=your_client_secret
YOUTUBE_REFRESH_TOKEN=your_refresh_token

# OpenAI API credentials
OPENAI_API_KEY=your_openai_api_key

# Application Configuration
APP_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
DEFAULT_LANGUAGE=it
MAX_VIDEOS_PER_DAY=5
DEFAULT_CATEGORIES=gaming,comedy,music,howto,technology
DEFAULT_DURATIONS=15,30,60
UPLOAD_TIMES=12:00,18:00,21:00
DEFAULT_HASHTAGS=#viral #shorts #trending

# File Paths
DOWNLOAD_DIR=data/downloads
OUTPUT_DIR=data/processed
DB_PATH=data/viral_shorts.db
LOG_DIR=logs

# Upload Configuration
AUTO_UPLOAD=true
UPLOAD_SCHEDULE_TYPE=fixed  # fixed, optimal
UPLOAD_HOUR=12  # 24-hour format (for fixed schedule)
UPLOAD_MINUTE=0

# Performance Analysis Configuration
MIN_ANALYTICS_DAYS=3  # Minimum days before analyzing performance
LEARNING_RATE=0.2  # Rate at which strategy adapts (0.0-1.0)

# Whisper Configuration
WHISPER_MODEL=base  # base, small, medium, large
WHISPER_API_KEY=your_whisper_api_key  # if using API instead of local model
SUBTITLE_FONT=Arial
SUBTITLE_SIZE=24
SUBTITLE_COLOR=white
SUBTITLE_STROKE_COLOR=black
SUBTITLE_STROKE_WIDTH=1.5

# GPT Configuration
GPT_MODEL=gpt-4  # gpt-3.5-turbo, gpt-4
GPT_TEMPERATURE=0.7
GPT_MAX_TOKENS=500

# Video Processing Configuration
MAX_RESOLUTION=1080  # Maximum vertical resolution (720 or 1080)
VIDEO_FPS=30
VIDEO_BITRATE=2M
AUDIO_BITRATE=128k
CAPTION_POSITION=top  # top, bottom
CAPTION_FONT=Impact
CAPTION_SIZE=36
CAPTION_COLOR=white
CAPTION_STROKE_COLOR=black
CAPTION_STROKE_WIDTH=2.0

# Advanced Settings
ENABLE_PROXY=false
PROXY_URL=
CONCURRENT_DOWNLOADS=2
CONCURRENT_PROCESSING=1
RETRY_ATTEMPTS=3
CACHE_TTL=3600  # seconds
